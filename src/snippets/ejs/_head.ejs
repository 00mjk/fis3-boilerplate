<meta charset="UTF-8">
<% if (env.device != 'mobile') { %>
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <meta name="renderer" content="webkit">
<% } %>

<% if (env.device != 'desktop') { %>
  <meta name="mobile-web-app-capable" content="yes">
  <meta name="apple-touch-fullscreen" content="yes">
  <meta name="apple-mobile-web-app-capable" content="yes">
<% } %>

<meta name="google" value="notranslate">
<meta http-equiv="Cache-Control" content="no-siteapp">
<meta name="robots" content="index,follow">

<% if (env.brandColor) { %>
  <meta name="theme-color" content="<%- env.brandColor%>">
  <meta name="msapplication-navbutton-color" content="<%- env.brandColor%>">
<% } %>


<% if (env.device != 'desktop') { %>
  <meta name="viewport" content="width=device-width,initial-scale=1shrink-to-fit=no">
<% } else { %>
  <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1,minimum-scale=1,user-scalable=no,shrink-to-fit=no,viewport-fit=cover">
<% } %>

<% if (env.device != 'desktop') { %>
  <meta name="format-detection" content="telephone=no,email=no,address=no,date=no">
  <meta name="msapplication-tap-highlight" content="no">
<% } %>

<% if (env.device != 'mobile' && env.legacyIe < 9) { %>
  <!--[if lt IE 9]><script src="/assets/vendors/html5shiv/html5shiv-3.7.3.min.js"></script><![endif]-->
<% } %>

<% if (env.useRem) { %>
  <!--[if lt IE 9]><script src="/assets/scripts/component/_rem.min.js?__inline"></script><![endif]-->
<% } %>
