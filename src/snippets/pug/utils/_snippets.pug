mixin head(config)
  -
    viewport = {
      width: 'device-width',
      'initial-scale': 1,
      'maximum-scale': 1,
      'minimum-scale': 1,
      'user-scalable': 'no',
      'shrink-to-fit': 'no',
      'viewport-fit': 'cover',
    };
    if (config.project.device === 'desktop') {
      viewport = {
        width: 'device-width',
        'initial-scale': 1,
        'shrink-to-fit': 'no',
      };
    }

    formatDetection = {
      'telephone': 'no',
      'email': 'no',
      'address': 'no',
      'date': 'no',
    };

  meta(charset='UTF-8')
  if config.project.device != 'mobile'
    meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
    + meta('renderer', 'webkit')

  if config.project.device != 'desktop'
    + meta('mobile-web-app-capable', 'yes')
    + meta('apple-touch-fullscreen', 'yes')
    + meta('apple-mobile-web-app-capable', 'yes')
    //- + meta('apple-mobile-web-app-status-bar-style', 'black')

  meta(name='google', value='notranslate')
  meta(http-equiv='Cache-Control', content='no-siteapp')
  + meta('robots', ['index','follow'])
  + meta('viewport', viewport)
  if config.project.device != 'desktop'
    + meta('format-detection', formatDetection)
    + meta('msapplication-tap-highlight', 'no')
  if config.project.brandColor
    + meta('theme-color', config.brandColor)
    + meta('msapplication-navbutton-color', config.brandColor)

  if config.project.device != 'mobile' && config.project.legacyIe < 9
    <!--[if lt IE 9]>
    + js('/assets/vendors/html5shiv/html5shiv-3.7.3.min.js')
    <![endif]-->
  if config.project.flexibleRem
    + js('/assets/scripts/component/_rem.min.js?__inline')

mixin htmlStartTag(config)
  if config.project.device != 'mobile' && config.project.legacyIe < 9
    if config.project.legacyIe < 7
      <!--[if lt IE 7]><html class="lt-ie9 lt-ie8 lt-ie7 ie6" lang="zh-cmn-Hans"><![endif]-->
    if config.project.legacyIe < 8
      <!--[if IE 7]><html class="lt-ie9 lt-ie8 ie7" lang="zh-cmn-Hans"><![endif]-->
    if config.project.legacyIe < 9
      <!--[if IE 8]><html class="lt-ie9 ie8" lang="zh-cmn-Hans"><![endif]-->
    <!--[if gte IE 9]><!--><html lang="zh-cmn-Hans"><!--<![endif]-->
  else
    <html lang="zh-cmn-Hans">

mixin htmlEndTag(config)
  </html>

mixin polyfill(config)
  if config.project.device != 'mobile' && config.project.legacyIe <= 6
    <!--[if IE 6]><script src="/assets/vendors/dd_belatedpng/dd_belatedpng_0.0.8a-min.js"></script><script>DD_belatedPNG.fix('*');</script><![endif]-->

mixin jquery(config)
  if config.project.device != 'mobile' && config.project.legacyIe <= 8
    <!--[if lt IE 9]><script src="/assets/vendors/jquery/jquery-1.12.4.min.js"></script><![endif]-->
    <!--[if gte IE 9]><!--><script src="/assets/vendors/jquery/jquery-2.2.4.min.js"></script><!--<![endif]-->
  else
    script(src="/assets/vendors/jquery/jquery-3.3.1.min.js")
